pkgname=uptater-bin
pkgver=1.0.1
pkgrel=1
pkgdesc="Simple Qt app for Pacman/Yay managment"
arch=('x86_64')
license=('GPL3')
options=('!debug')
depends=('qtermwidget' 'pacman-contrib' 'curl')
optdepends=('reflector: for mirrorlist management')
makedepends=()

source=('uptater'
        'uptater.desktop'
        'icon.png')

sha256sums=('1794dd23002d052ae050bd5213e3a05c922008f92a7dd89f1eeeb4ae429fb3ec'
            'ee6cba820931b47d88c7e8a29eb11b933b3986237d6e650db54899dc9b1b994d'
            '04b5e5cae018cae45efccfa8d5bca866fbac724a04063ce51115cdd1608e9683')

build() {
  :
}

package() {
  # Install the executable
  install -Dm755 "${srcdir}/uptater" "${pkgdir}/usr/bin/uptater"

  # Install the .desktop launcher file
  install -Dm644 "${srcdir}/uptater.desktop" "${pkgdir}/usr/share/applications/uptater.desktop"

  # Install the icon
  install -Dm644 "${srcdir}/icon.png" "${pkgdir}/usr/share/pixmaps/uptater.png"
}
